{
  "private": true,
  "name": "lp58-demo",
  "version": "2.3.0",
  "description": "CSS Nite LP58「Coder's High 2018」で発表した「現場で役立つCSSアニメーション」のオンラインデモサイトです。",
  "license": "MIT",
  "scripts": {
    "build": "parcel build src/html/index.pug --dist-dir docs --no-optimize --no-source-maps --public-url /lp58",
    "lint:html": "markuplint 'docs/**/*.html'",
    "lint:css": "stylelint 'docs/**/*.css'",
    "start": "parcel src/html/index.pug --open --no-cache --dist-dir docs",
    "test": "npm run lint:css && npm run lint:html",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@parcel/transformer-pug": "^2.10.3",
    "@parcel/transformer-sass": "^2.10.3",
    "@prettier/plugin-pug": "^3.0.0",
    "autoprefixer": "^10.4.16",
    "husky": "^8.0.3",
    "markuplint": "^4.14.0",
    "parcel": "^2.10.3",
    "pug": "^3.0.2",
    "sass": "^1.69.5",
    "stylelint": "^15.11.0",
    "stylelint-config-recommended": "^13.0.0"
  },
  "dependencies": {
    "normalize.css": "^8.0.1",
    "smooth-scroll": "^16.1.3"
  }
}
